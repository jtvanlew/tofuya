					</div>

				</div><!-- .row -->
				<!-- Module header end -->

				<div class="row multi-columns-row">
					<% items = Item.where(tag:"favorite").order(:menu_num.asc) %>
					<!-- Restaurant menu left col start -->
					<div class="col-sm-6">
						<% items[0..((items.count-0.5)/2)].each_with_index do |item, index| %>
						<div class="menu">
							<div class="row">
								<div class="col-sm-8">
									<h4 class="menu-title font-alt"><%= item.menu_num %>. <%= item.name %>
									<% item.tag.each do |tag| %>
									<% if tag == "tofu" %> Soon Tofu
									<% elsif tag == "combo" %> Combo
									<% elsif tag == "spicy" %><span class="glyphicon glyphicon-fire">
									<% elsif tag == "veggie" %><span class="vegetarianicon">Ⓥ</span>
									<% end %>
									<% end %></h4>
									<div class="menu-detail font-serif"><%= item.description %></div>
								</div>
								<div class="col-sm-4 menu-price-detail">
									<h4 class="menu-price font-alt">$<%= item.price %></h4>
								</div>
							</div>
						</div>
						<% end %>
					</div>
					<!-- Restaurant menu left col end -->
					<!-- Restaurant menu right col start -->
					<div class="col-sm-6">
						<% items[((items.count)/2)..-1].each_with_index do |item, index| %>
						<div class="menu">
							<div class="row">
								<div class="col-sm-8">
									<h4 class="menu-title font-alt"><%= item.menu_num %>. <%= item.name %>
